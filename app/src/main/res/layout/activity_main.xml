<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingEnd="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:padding="10dp"
    tools:context=".activities.MainActivity">

    <Button
        android:id="@+id/buttonGuest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/labelButtonGuest"
        android:textSize="18sp"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/buttonKitchen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/labelButtonKitchen"
        android:textSize="18sp"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/buttonOutside"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/labelButtonOutside"
        android:textSize="18sp"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/editLogData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textSize="12sp"
        android:hint="@string/hintLogOutput"
        android:layout_marginTop="15dp" />

</LinearLayout>